{
  "name": "server",
  "version": "1.0.0",
  "description": "a thumbnail comparison app",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node ./dist/index.js",
    "watch": "tsc -w",
    "server": "nodemon ./dist/index.js",
    "dev": "concurrently \"npm run watch\" \"npm run server\"  \"npm run watch-views\"",
    "build": "tsc && npm run copy-files",
    "prisma": "npx prisma db push && npx prisma generate",
    "copy-files": "copyfiles -u 1 \"src/views/**/*\" dist/",
    "watch-views": "nodemon --watch src/views -e ejs -x \"npm run copy-files\""
  },
  "author": "shubham verma",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "bullmq": "^5.13.2",
    "concurrently": "^9.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.0",
    "nodemailer": "^6.9.15"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "@types/nodemailer": "^6.4.16",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.4",
    "prisma": "^5.19.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
